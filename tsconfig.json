{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es6",
      "es2016",
      "esnext.asynciterable"
    ],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmit": false
  },
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}